    "version": "0.2.0",
    "configurations": [
        {
            "type": "perl",
            "request": "launch",
            "name": "daemon",
            "program": "${workspaceFolder}/scripts/daemon.pl",
            "cwd": "${workspaceFolder}",
            "stopOnEntry": false,
            "reloadModules": true
        },
        {
            "name": "iSonos",
            "type": "node",
            "program": "${workspaceFolder}/Sonos-Web/html/iSonos.js",
            "cwd": "${workspaceFolder}/Sonos-Web",
            "request": "launch"
        }
    ]
}